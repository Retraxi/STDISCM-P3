<Window x:Class="VideoPlayerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc ="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="Video Player" Height="450" Width="800">
    <Grid>
        <!-- VideoView from LibVLCSharp -->
        <vlc:VideoView Name="videoView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <!-- Load Button -->
        <Button Content="Load Video" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10" Click="LoadButton_Click" />

        <!-- Play for 10 seconds Button -->
        <Button Content="Preview 10 Seconds" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="10,50,0,0" Click="PlayPreviewButton_Click" />
    </Grid>
</Window>